<Window x:Class="WPF_Home.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="242" Width="671">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF909AFF" Offset="0.456"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button Content="Connect" HorizontalAlignment="Left" Height="33" Margin="433,111,0,0" VerticalAlignment="Top" Width="185" FontFamily="Arial Black" Click="Connect_Click"/>
        <PasswordBox x:Name="passwordTb" HorizontalAlignment="Left" Height="33" Margin="192,111,0,0" VerticalAlignment="Top" Width="194" FontSize="24"/>
        <TextBox x:Name="userTb" HorizontalAlignment="Left" Height="33" Margin="192,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="194" FontSize="24" FontFamily="Arial Black"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="37,63,0,0" VerticalAlignment="Top" Width="150" FontFamily="Arial Black" FontSize="24" RenderTransformOrigin="0.354,0.447" Foreground="Black" BorderThickness="0"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="37,111,0,0" VerticalAlignment="Top" Width="139" FontSize="24" FontFamily="Arial Black"/>

    </Grid>
</Window>
