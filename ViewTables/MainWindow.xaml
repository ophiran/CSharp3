<Window x:Class="ViewTables.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800">
    <StackPanel>
        <TabControl>
            <TabItem Header="News">
                <DataGrid ItemsSource="{Binding newsList}" Grid.ColumnSpan="2">

                </DataGrid>
            </TabItem>
            <TabItem Header="Articles">
                <DataGrid ItemsSource="{Binding articlesList}" Grid.ColumnSpan="2">

                </DataGrid>
                
            </TabItem>
            <TabItem Header="Rights">
                <DataGrid ItemsSource="{Binding rightsList}" Grid.ColumnSpan="2">

                </DataGrid>
            </TabItem>
            <TabItem Header="Types">
                <DataGrid ItemsSource="{Binding typesList}" Grid.ColumnSpan="2">

                </DataGrid>
            </TabItem>
            <TabItem Header="Users">
                <DataGrid ItemsSource="{Binding usersList}" Grid.ColumnSpan="2">

                </DataGrid>
            </TabItem>
            
            <TabItem Header="Status">
                <DataGrid ItemsSource="{Binding statusList}" Grid.ColumnSpan="2">
                    
                </DataGrid>
            </TabItem>
        </TabControl>
    </StackPanel>
</Window>
